// To get the result as the decimal number
class Solution {
  public:
    unsigned int reverseBits(unsigned int n) {
        unsigned int result = 0;
        while (n > 0) {
            result <<= 1;
            result |= (n & 1);
            n >>= 1;
        }
        return result;
    }
};
// To get the result as the binary number
unsigned int reverseBits(unsigned int n) {
        unsigned int result = 0;
       for(int i=0;i<32;i++){
        result<<=1;
        result|=(n&1);
        n<<=1;}
        return result;
    }
};
