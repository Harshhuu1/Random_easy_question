long long sum(long long int n){
	if(n==0) return 0;
	return (n%mod+sum(n-1)%mod)%mod;
}
long long product(long long int n){
	if(n==1)return n;
	return ((n%mod)*product(n-1)%mod)%mod;
}

long long int sumOrProduct(long long int n, long long int q)
{
	// Write your code here.
	if(q==1){
		return sum(n)%mod;
	}
	else if(q==2){
		return product(n)%mod;
	}

}
