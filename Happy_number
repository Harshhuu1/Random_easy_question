class Solution {
public:
    int digit(int n){
        int result=0;
        while(n){
            int r=n%10;
            result+= r*r;
            n/=10;    
        }
        return result;
    }

    bool isHappy(int n) {
       unordered_set<int> st;
       while(n!=1 && !st.count(n)){
        st.insert(n);
        n=digit(n);
       }
       return n==1;
        
       
        
    }
};
