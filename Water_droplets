#include <bits/stdc++.h>
using namespace std;

int getWaterDroplets(long long* initialPosition, long long* velocity, int n, long long l) 
{
    if (n == 0) return 0;

    vector<pair<long long, long long>> drops;
    for (int i = 0; i < n; i++) {
        drops.push_back({initialPosition[i], velocity[i]});
    }

    // Sort in descending order of position
    sort(drops.rbegin(), drops.rend());

    vector<double> time;
    for (int i = 0; i < n; i++) {
        double t = (double)(l - drops[i].first) / drops[i].second;
        time.push_back(t);
    }

    int count = 0;
    double maxtime = -1e18;

    for (double t : time) {
        if (t > maxtime) {
            count++;
            maxtime = t;
        }
    }

    return count;
}
