#include<string>
void removeAllOccurrencesOfChar(char input[], char c) {
    // Write your code here
    string ans="";
    for(int i=0;input[i]!='\0';i++){
        if(input[i]!=c){
            ans+=input[i];
        }
    }
    int i=0;
    for(;i<ans.size();i++){
        input[i]=ans[i];
    }
    input[i]='\0';
     
}
